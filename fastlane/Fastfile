# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Runs unit tests"
  lane :tests do
    params = { package_path: '.', scheme: 'OpenID4VP', devices: ['iPhone 14'], result_bundle: true, xcargs: "-skipPackagePluginValidation" }
    run_tests(params)
  end
end
